{
    "compilerOptions": {
        "module": "NodeNext",
        "lib": ["dom", "ESNext"],
        "target": "es5",
        "moduleResolution": "nodenext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "strict": true,
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
